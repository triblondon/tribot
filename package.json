{
  "name": "tribot",
  "description": "XMPP chat bot, similar to but simpler than hubot, and locked to XMPP",
  "main": "./lib/bot.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:triblondon/tribot.git"
  },
  "dependencies": {
    "body-parser": "^1.6.5",
    "bunyan": "^1.3.4",
    "bunyan-logentries": "^0.1.0",
    "express": "^4.8.5",
    "forever": "^0.11.1",
    "ltx": "^0.5.2",
    "node-schedule": "^0.1.15",
    "node-stringprep": "^0.7.0",
    "node-xmpp-client": "^1.0.0-alpha7",
    "node-xmpp-core": "^1.0.0-alpha6",
    "request": "^2.40.0",
    "underscore": "^1.6.0"
  },
  "scripts": {
    "dev": "node --harmony index.js",
    "start": "./node_modules/.bin/forever -c \"node --harmony\" --minUptime 5000 --spinSleepTime 1000 --no-colors start index.js",
    "stop": "./node_modules/.bin/forever -c \"node --harmony\" --no-colors stop index.js"
  }
}
